# Directus Configuration Template
# Copy this file to .env and update with your values

# Database (Supabase Postgres)
DB_HOST=db.xxxxx.supabase.co
DB_PORT=5432
DB_DATABASE=postgres
DB_USER=postgres
DB_PASSWORD=your-supabase-password

# Directus Keys (generate with scripts/generate-directus-keys.sh)
DIRECTUS_KEY=your-directus-key-here
DIRECTUS_SECRET=your-directus-secret-here

# Admin User (first-time setup only)
ADMIN_EMAIL=admin@inquiry.institute
ADMIN_PASSWORD=your-secure-admin-password

# Public URL
PUBLIC_URL=https://directus.inquiry.institute

# CORS
CORS_ENABLED=true
CORS_ORIGIN=https://commonplace.inquiry.institute,https://inquiry.institute

# Storage
STORAGE_LOCATIONS=local,supabase
STORAGE_LOCAL_ROOT=./uploads
